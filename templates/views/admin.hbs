<!DOCTYPE html>

<head>
    <title>Admin</title>
    <script src="/js/jquery-3.6.1.js"></script>
    <script src="/js/admin.js"></script>
    <link rel="stylesheet" href="/css/admin.css">
    <link rel="icon" href="/img/logo.jpg">
</head>

<body>
    <div class='container'>
        <div class="header">
            <button id="logOut">Log Out</button>
            <h1>Global Trade Connect</h1>
        </div>
        <div class="menu">
            <nav class="nav">
                <ul>
                    <li><a href="/home">Home</a></li>
                    <li><a href="/admin">Admin</a></li>
                    <li><a href="/vendor">Vendor</a></li>
                    <li><a href="/user">User</a></li>
                    <li><a href="/product">Product</a></li>
                    <li><a href="#">Ad</a></li>
                </ul>
            </nav>
        </div>
        <div class="content">
            <br>
            <br>
            <div class="buttons">
                <button id="deleteBtn">Delete</button>
                <button id="addBtn">Add Admin</button>
                <button id="editBtn">Edit</button>

            </div>
            <br>
            <br>
            <div>
                <table>
                    <thead>
                        <tr>
                            <th></th>
                            <th>Name</th>
                            <th>Email ID</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each adminArr}}
                        <tr>
                            <td>
                                <input type="checkbox" id="{{this._id}}"/>
                            </td>
                            <td>{{this.name}}</td>
                            {{!-- <td>{{this.password}}</td> --}}
                            <td>{{this.email_id}}</td>
                            <td>{{this.status}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
            <br>
            <br>

        </div>
        <div class="footer"></div>
    </div>
</body>

</html>